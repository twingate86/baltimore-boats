<div class="container-fluid sub-page-content">
    <h1 class="sub-page-title">Contact</h1>
    <div class="container-fluid">
        <p>Questions about boats? Get in contact with us!</p>
        <%= flash[:notice] %>

        <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
        <div class="row">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
          </div>
          <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
          </div>
          <div class="form-group">
            <%= form.label :message %>
            <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
          </div>
        </div>
        <%= form.submit "Send", class: "form_label" %>
        <% end %>
        <ul>
            <li>Phone: 555-555-5555</li>
            <li>Email: boats@baltimoreboats.com</li>
            <li>Address: 560 Boatsburg Ave.<br>Baltimore, MD 21224</li>
        </ul>
    </div>
</div>
